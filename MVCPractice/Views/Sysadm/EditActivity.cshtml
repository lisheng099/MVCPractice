@using MVCPractice.ViewModels.Activities
@model ActivitiyViewModel

<head>
    <script src="~/ckeditor/build/ckeditor.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .tab-content {
            border: 1px solid #dee2e6;
            border-top: none;
            padding: 15px;
            height: 600px; /* 設定內容區域的高度 */
            overflow-y: auto; /* 超出高度時顯示滾動條 */
        }
    </style>
</head>

<body>
    <div class="container mt-3">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="data-tab" data-toggle="tab" href="#data" role="tab" aria-controls="data" aria-selected="true">活動資料</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="image-tab" data-toggle="tab" href="#image" role="tab" aria-controls="image" aria-selected="false">圖片</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="file-tab" data-toggle="tab" href="#file" role="tab" aria-controls="file" aria-selected="false">檔案</a>
            </li>
        </ul>
        <div class="tab-content card" id="myTabContent">
            <div class="tab-pane fade show active" id="data" role="tabpanel" aria-labelledby="data-tab">
                @Html.Partial("EditActivityData", Model.ActivityDataDto)
            </div>
            <div class="tab-pane fade" id="image" role="tabpanel" aria-labelledby="image-tab">
                @Html.Partial("EditActivityImages", Model.ActivityImages)
            </div>
            <div class="tab-pane fade" id="file" role="tabpanel" aria-labelledby="file-tab">
                @Html.Partial("EditActivityFiles" , Model.ActivityFiles)
            </div>
        </div>
    </div>
</body>

